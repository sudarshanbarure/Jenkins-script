pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-repo/go-app.git'
            }
        }

        stage('Cleanup Old Containers') {
            steps {
                sh '''
                    docker stop go-app || true
                    docker rm go-app || true
                '''
            }
        }

        stage('Build Go Binary') {
            steps {
                sh 'go mod tidy'
                sh 'go build -o app main.go'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t go-app .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run -d -p 8080:8080 --name go-app go-app'
            }
        }
    }

    post {
        always {
            sh 'docker ps -a'
        }
    }
}